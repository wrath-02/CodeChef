import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
    public static void main(String[] args) throws java.lang.Exception
    {
        // your code goes here
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while (t--> 0) {
            long l = sc.nextLong();
            long r = sc.nextLong();
            long count = (r / 3) - ((l - 1) / 3);
            System.out.println(count);
        }
        sc.close();
    }
}
