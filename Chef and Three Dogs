import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
    public static void main (String[] args) throws java.lang.Exception
    {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while(t-- > 0){
            int s = sc.nextInt();
            int v = sc.nextInt();
            
            double time = (2.0 * s) / (3.0 * v);
            System.out.printf("%.7f\n", time);
        }
        sc.close();
    }
}
